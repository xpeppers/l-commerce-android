<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xpeppers.trentinolocal.details.OfferDetailActivity"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:id="@+id/svMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ivBgOffer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/placeholder"
                    />
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="Titolo"
                    android:textSize="@dimen/text_title_size"
                    android:textColor="@color/trentino_white"
                    android:padding="@dimen/detail_text_padding"
                    android:background="@drawable/vertical_gradient"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvShortDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="@dimen/text_size"
                android:padding="@dimen/text_padding"
                />

            <HorizontalScrollView
                android:id="@+id/hsView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_image_height" >

                <LinearLayout
                    android:id="@+id/llGallery"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >
                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="@dimen/text_size"
                android:padding="@dimen/text_padding"
                />

            <RelativeLayout
                android:id="@+id/map_layout"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <fragment
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-100dp"
                    android:layout_marginBottom="-100dp"
                    android:name="com.google.android.gms.maps.MapFragment"/>

                <ImageView
                    android:id="@+id/transparent_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:color/transparent" />

            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_height"
        android:layout_weight="0"
        android:orientation="horizontal">

        <com.rey.material.widget.Button
            android:id="@+id/bPurchase"
            style="@style/RaiseWaveColorGreenButtonRippleStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ACQUISTA â‚¬ 00.00"
            android:textColor="@color/trentino_white"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Button"
            app:rd_delayClick="afterRelease" />
    </LinearLayout>
</LinearLayout>
