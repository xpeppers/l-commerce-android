<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xpeppers.trentinolocal.details.OfferDetailActivity"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:id="@+id/svMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <HorizontalScrollView
                android:id="@+id/hsView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/detail_image_height" >

                <LinearLayout
                    android:id="@+id/llGallery"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal" >
                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="@dimen/text_size"
                android:padding="@dimen/text_padding"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="@dimen/text_size"
                android:padding="@dimen/text_padding" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/where_use"
                android:textSize="@dimen/text_size"
                android:padding="@dimen/text_padding"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/map_layout"
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <fragment
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-100dp"
                    android:layout_marginBottom="-100dp"
                    android:name="com.google.android.gms.maps.MapFragment"/>

                <ImageView
                    android:id="@+id/transparent_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:color/transparent" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tvMerchant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Merchant"
                android:textSize="@dimen/text_size"
                android:paddingTop="@dimen/text_padding"
                android:paddingLeft="@dimen/text_padding"
                />

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:textSize="@dimen/text_size"
                android:paddingLeft="@dimen/text_padding"
                />
            <TextView
                android:id="@+id/tvTel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tel"
                android:textSize="@dimen/text_size"
                android:paddingLeft="@dimen/text_padding"
                />
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textSize="@dimen/text_size"
                android:paddingLeft="@dimen/text_padding"
                />
            <TextView
                android:id="@+id/tvSiteWeb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Site Web"
                android:textSize="@dimen/text_size"
                android:paddingLeft="@dimen/text_padding"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/how_does_it_work"
                android:textSize="@dimen/text_size"
                android:padding="@dimen/text_padding"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/how_does_it_work_content"
                android:textSize="@dimen/text_size"
                android:padding="@dimen/text_padding"
                />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/footer_height"
        android:layout_weight="0"
        android:orientation="horizontal">

        <com.rey.material.widget.Button
            android:id="@+id/bPurchase"
            style="@style/RaiseWaveColorGreenButtonRippleStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ACQUISTA â‚¬00.00"
            android:textColor="@color/trentino_white"
            app:rd_delayClick="afterRelease" />
    </LinearLayout>
</LinearLayout>
